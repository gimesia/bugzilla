@model IEnumerable<bugzilla.Models.Bug>

@{
    ViewData["Title"] = "Bugs";
}
<html>

<head>
    <title>Bugs</title>
</head>
<body>
<form asp-action="Table">
    <label for="dev">Issued by:</label>
    <select id="dev" name="dev" class="mr-4">
        <option value="*">all</option>
        @foreach (var dev in ((IEnumerable<Bug>) ViewData["bugs"]).Select(bug => bug.Dev).Distinct())
        {
            <option value="@dev?.Name">@dev?.Name</option>
        }
    </select>
    <label for="closed">Closed:</label>
    <select id="closed" name="closed" class="mr-4">
        <option value="*">all</option>
        <option value="true">Closed</option>
        <option value="false">Open</option>
    </select>
    <button type="submit">
        Filter!
    </button>
</form>
<table class="table table-hover">
    <thead>
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.Id)*@id
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Description)*@description
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Dev.Name)*@Issued by
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Closed)*@closed
        </th>
        <th>
            <a asp-action="AddOrEdit" class="btn btn-outline-success">New Bug</a>
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dev.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Closed)
            </td>
            <td>
                <a asp-action="AddOrEdit" asp-route-id="@item.Id">
                    Edit
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger ml-1" onclick="return confirm('Are you sure to delete this record?')">
                  Delete
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>
</body>
</html>