@model bugzilla.Models.Review


<h4>Review Form</h4>
<hr/>
<div class="row">
    <div class="col-md-6">
        <form asp-action="AddOrEdit">
            <div class="form-group">
                <label class="control-label">Approved:</label>
                <br>
                <input asp-for="Approved" type="radio" id="closed" value="open">
                <label for="closed">Closed</label>
                <br>
                <input asp-for="Approved" type="radio" id="open" value="false">
                <label for="open">Open</label>
                <br>
            </div>
            <div class="form-group">
                <select>
                    @foreach (var fix in (IEnumerable<Fix>) ViewData["fixes"])
                    {
                        <option value="@fix.Id">@fix.Dev?.Name 's @fix.Bug?.Description BUG</option>
                    }
                </select>
            </div>
            
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="submit" value="Submit" class="btn btn-primary btn-block"/>
                </div>
                <div class="form-group col-md-6">
                    <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fa fa-table"></i> Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>