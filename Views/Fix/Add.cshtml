@model bugzilla.Models.Fix

@{
    ViewData["Title"] = "Add";
}

<h4>Fix Form</h4>
<hr/>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Add">
            <div class="form-group">
                
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="roles">Fixed Bug:</label>
                    <select id="bugs" name="bugs">
                        @foreach (var fix in ((IEnumerable<Fix>) ViewData["fixes"]).Where(fix =>  fix.Bug.Closed!=true))
                        {
                            <option>@fix.Bug.Description from @fix.Dev.Name</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="submit" value="Submit" class="btn btn-primary btn-block"/>
                </div>
                <div class="form-group col-md-6">
                    <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fa fa-table"></i> Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>