@model bugzilla.Models.Developer

@{
    ViewData["Title"] = "Add Or Edit";
}

<h4>Developer Form</h4>
<hr/>
<div class="row">
    <div class="col-md-6">
        <h4>
            <span class="font-weight-bold">Id: </span>@Model.Id
        </h4>
        <form asp-action="AddOrEditDb">
            <div class="form-group">
                <input type="hidden" asp-for="Id" id="id" name="id"/>
                <label for="name" class="control-label">Name:</label>
                <input asp-for="Name" id="name" name="name" class="form-control" placeholder="@Model.Name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="roles">Roles</label>
                   @*TODO: show current role as default!*@
                    <select asp-for="@Model.Role" id="roles" name="role">
                        @foreach (var role in (IEnumerable<Role>) ViewData["roles"])
                        {
                            <option value="@role.Id">@role.Name</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="submit" value="Submit" class="btn btn-primary btn-block"/>
                </div>
                <div class="form-group col-md-6">
                    <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fa fa-table"></i> Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>